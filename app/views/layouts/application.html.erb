<!DOCTYPE html>
<html>
  <head>
    <title>Bookable</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application' %>
    <%= javascript_include_tag 'application'%>

  </head>
  <body>
    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <div class="navbar-brand">
            <% if logged_in? %>
              <%= link_to "Home", root_url %>
              <%= link_to "Books", books_path %>
              <%= link_to "Genres", genres_path %>
              <%= link_to "Authors", authors_path %>
              <%= link_to " My Books", user_path(current_user) %>
            <% end %>
          </div>
         </div>
        <div class="login_status" data-current_user="<%= current_user.id unless current_user == nil %>">
            <%= login_status_display %>
            <% if logged_in? %>
              <%= link_to "Log Out", logout_path, method: :post %>
            <% end %>
        </div>
          </div>
        <div class="navbar-collapse collapse">

        </div><!--/.nav-collapse -->
      </div>
    </div>

    <!-- content -->
    <div class="container"  role="main">
      <%= yield %>
    </div>
  </body>
</html>
